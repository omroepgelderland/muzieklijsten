{
	"name": "omroep_gelderland/muzieklijsten",
	"description": "Stemmodule voor muziek",
	"type": "project",
	"authors": [
		{
			"name": "Sander Otten",
			"email": "sotten@gld.nl"
		},
		{
			"name": "Remy Glaser",
			"email": "rglaser@gld.nl"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"pear/mail_mime": "^1.10",
		"pear/mail": "^1.4",
		"google/recaptcha": "^1.2",
		"laminas/laminas-log": "^2.16",
		"ext-mysqli": "*",
		"ext-intl": "*"
	},
	"autoload": {
		"psr-4": {
			"muzieklijsten\\": "src/php/"
		},
		"files": [
			"src/php/functies.php",
			"src/php/exceptions.php"
		]
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"php-parallel-lint/php-parallel-lint": "^1.4",
		"squizlabs/php_codesniffer": "^3.11",
		"slevomat/coding-standard": "^8.15"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
